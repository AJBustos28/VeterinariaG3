@model IEnumerable<Veterinaria.DAL.Mascota>

@{
    ViewData["Title"] = "Listado de Mascotas";
}

<h1>Listado de Mascotas</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nueva</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Especie)</th>
                <th>@Html.DisplayNameFor(model => model.Raza)</th>
                <th>@Html.DisplayNameFor(model => model.Edad)</th>
                <th>@Html.DisplayNameFor(model => model.Genero)</th>
                <th>@Html.DisplayNameFor(model => model.Peso)</th>
                <th>@Html.DisplayNameFor(model => model.Dueño)</th>
                <th>@Html.DisplayNameFor(model => model.Padecimiento)</th>
                <th>@Html.DisplayNameFor(model => model.ImagenMascota)</th>
                <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Especie)</td>
                    <td>@Html.DisplayFor(modelItem => item.Raza)</td>
                    <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                    <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dueño)</td>
                    <td>@Html.DisplayFor(modelItem => item.Padecimiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImagenMascota)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.IdMascotas">Editar</a> |
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.IdMascotas">Detalles</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdMascotas">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
